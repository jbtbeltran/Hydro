<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CECECE"
    tools:context=".LoginRealActivity">


    <ImageView
        android:id="@+id/placeholder"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_above="@id/emailaddress"
        android:layout_marginBottom="20dp"
        app:srcCompat="@drawable/aqua" />


    <EditText
        android:id="@+id/emailaddress"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/password"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/test_border"
        android:hint="Email Address"
        android:ems="10"
        android:inputType="textPersonName"
        android:padding="5dp"
        android:paddingStart="10dp"
        android:textColor="#8F9193"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/resetPassword"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/test_border"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPersonName"
        android:padding="5dp"
        android:paddingStart="10dp"
        android:password="true"
        android:textColor="#8F9193"
        android:textSize="20sp" />

    <Button
        android:id="@+id/login"
        android:layout_width="166dp"
        android:layout_height="65dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="120dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="125dp"
        android:layout_marginBottom="203dp"
        android:backgroundTint="#009cb7"
        android:text="Login" />

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/resetPassword"
        android:layout_height="wrap_content"
        android:layout_above="@id/login"
        android:layout_marginStart="40dp"
        android:text="Reset Password"
        android:textColor="#009cb7" />

</RelativeLayout>
