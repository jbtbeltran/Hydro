    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CECECE"
    tools:context=".DashboardActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/frameLayoutTop"
            android:layout_width="278dp"
            android:layout_height="61dp"
            android:background="@drawable/border2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.15">

            <TextView
                android:id="@+id/textViewWaterPercentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|left"
                android:layout_marginStart="1dp"
                android:drawableLeft="@drawable/water_40px"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:text="60%"
                android:textColor="#000000"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textViewTemperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_horizontal"
                android:layout_marginStart="1dp"
                android:drawableLeft="@drawable/temperature_40px"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:text="20Â°C"
                android:textColor="#000000"
                android:textSize="24sp" />

        </FrameLayout>

        <TextView
            android:id="@+id/textViewECLv"
            android:layout_width="122dp"
            android:layout_height="30dp"
            android:text="EC Level"
            android:textColor="#000000"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.75"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.28" />

        <TextView
            android:id="@+id/textViewNutrientLv"
            android:layout_width="128dp"
            android:layout_height="26dp"
            android:text="Nutrient Level"
            android:textColor="#000000"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.75"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.52" />

        <TextView
            android:id="@+id/textViewPHLvLb"
            android:layout_width="110dp"
            android:layout_height="29dp"
            android:text="PH Level"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.25"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.28" />

        <TextView
            android:id="@+id/textViewWaterLv"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:text="Water Level"
            android:textColor="#000000"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.25"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.52" />

        <FrameLayout
            android:id="@+id/FrameLayoutPHLv"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:layout_constraintBottom_toTopOf="@+id/textViewWaterLv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.25"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewPHLvLb">

            <TextView
                android:id="@+id/textViewPHLv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="test"
                android:textColor="#000000" />

            <ProgressBar
                android:id="@+id/progressBarPHLv"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/roundprogbar1"
                android:secondaryProgress="0"/>


        </FrameLayout>

        <FrameLayout
            android:id="@+id/FrameLayoutSched1"
            android:layout_width="259dp"
            android:layout_height="56dp"
            android:background="@drawable/border2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.78">

            <TextView
                android:id="@+id/textViewTime1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|left"
                android:layout_marginStart="1dp"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:text="07:45am"
                android:textColor="#000000"
                android:textSize="24sp" />

            <FrameLayout
                android:id="@+id/FrameLayoutCompleted1"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_gravity="center|right"
                android:layout_marginRight="10dp"
                android:background="@drawable/border3">

                <TextView
                    android:id="@+id/textViewCompleted1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Completed"
                    android:textColor="#000000" />
            </FrameLayout>
            <!--        android:text="TextView" />-->
        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

