    <EditText
        android:id="@+id/txtBoxUsername"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/placeholder"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="39dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/test_border"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        android:padding="5dp"
        android:paddingStart="10dp"
        android:textColor="#8F9193"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/txtBoxPassword"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/txtBoxUsername"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/test_border"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPersonName"
        android:padding="5dp"
        android:paddingStart="10dp"
        android:password="true"
        android:textColor="#8F9193"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/textViewECLv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtBoxPassword"
        android:layout_marginStart="50dp"
        android:text="Change Password?"
        android:textColor="#009cb7" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/textViewECLv">
        <Button
            android:id="@+id/btnBackUp"
            android:layout_width="166dp"
            android:layout_height="65dp"
            android:layout_below="@+id/txtBoxPassword"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="19dp"
            android:backgroundTint="#009cb7"
            android:text="Back Up" />

        <Button
            android:id="@+id/btnRestore"
            android:layout_width="166dp"
            android:layout_height="65dp"
            android:layout_below="@+id/btnBackUp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="4dp"
            android:backgroundTint="#a2d8ed"
            android:text="Restore" />
    </LinearLayout>

